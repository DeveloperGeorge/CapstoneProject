<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CapstoneProject.Views.CreateNotePage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Cancel" x:Name="cancelAddNote"  Clicked="cancelAddNote_Clicked"/>
        <ToolbarItem Text="Save" x:Name="saveAddNote" Clicked="saveAddNote_Clicked" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <ScrollView>


            <StackLayout>
                <Entry Placeholder="Note Name" x:Name="NoteNameEntry"/>
                <Editor Placeholder="Notes go here" x:Name="NoteDescriptionEditor" AutoSize="TextChanges" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>